<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="TalTech ÕIS v0.1 :)" Height="450" Width="1160">
    <Grid>
        <StackPanel Name="pnlInitialView" Visibility="Hidden">
            <TabControl>
                <TabItem Header="Õppekavad">
                    <Grid Margin="10" Height="370">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Õppekavade loetelu" FontSize="18" FontWeight="Bold"/>
                        <ListView Grid.Row="1" ItemsSource="{Binding Curriculums}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Õppekava nimi" DisplayMemberBinding="{Binding EtName}" Width="250"/>
                                    <GridViewColumn Header="Õppekava nimi (EN)" DisplayMemberBinding="{Binding EnName}" Width="250"/>
                                    <GridViewColumn Header="Õppekava kood" DisplayMemberBinding="{Binding Code}" Width="90"/>
                                    <GridViewColumn Header="Programmijuht" DisplayMemberBinding="{Binding ManagerName}" Width="190"/>
                                    <GridViewColumn Header="Õppetase" DisplayMemberBinding="{Binding StudyLevelText}" Width="110"/>
                                    <GridViewColumn Header="Õppekava maht (EAP)" DisplayMemberBinding="{Binding EapVolume}" Width="140"/>
                                    <GridViewColumn Header="Õppetöö keel" DisplayMemberBinding="{Binding LanguageText}" Width="90"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Grid.Row="2" Width="150" Height="30" HorizontalAlignment="Right" Name="btnÓpenAddCurriculumView" Content="Lisa õppekava" Click="btnÓpenAddCurriculumView_Click"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Õppeained">
                    <Grid Margin="10" Height="365">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Õppeainete loetelu" FontSize="18" FontWeight="Bold"/>
                        <ListView Grid.Row="1" ItemsSource="{Binding Subjects}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Õppeaine nimi" DisplayMemberBinding="{Binding EtName}" Width="250"/>
                                    <GridViewColumn Header="Õppeaine nimi (EN)" DisplayMemberBinding="{Binding EnName}" Width="250" />
                                    <GridViewColumn Header="Õppeaine kood" DisplayMemberBinding="{Binding Code}" Width="90"/>
                                    <GridViewColumn Header="Õppejõud" DisplayMemberBinding="{Binding TeacherName}" Width="250"/>
                                    <GridViewColumn Header="Õppeaine maht (EAP)" DisplayMemberBinding="{Binding EapVolume}" Width="140" />
                                    <GridViewColumn Header="Hindamisvorm" DisplayMemberBinding="{Binding AssessmentFormText}" Width="140" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button Grid.Row="2" Width="150" Height="30" HorizontalAlignment="Right" Name="btnOpenAddSubjectView" Content="Lisa õppeaine" Click="btnOpenAddSubjectView_Click"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>
        <StackPanel Name="pnlEditCurriculumView" Visibility="Hidden">
            <Grid Margin="10" Height="420">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Text="Õppekava muutmine" FontSize="18" FontWeight="Bold"/>
                <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Content="Õppekava nimi:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="2" Margin="0,0,0,5" Text="{Binding EtName}" />
                    <Label Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" Content="Õppekava nimi (EN):" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,0,0,5" Text="{Binding EnName}" />
                    <Label Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Content="Õppekava kood:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="2" Margin="0,0,0,5" Text="{Binding Code}" />
                    <Label Grid.Row="3" Grid.Column="1" Margin="0,0,0,5" Content="Programmijuht:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="2" Margin="0,0,0,5" Text="{Binding TeacherName}" />
                    <Label Grid.Row="4" Grid.Column="1" Margin="0,0,0,5" Content="Õppetase:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="4" Grid.Column="2" Margin="0,0,0,5" ItemsSource="{Binding Levels}" SelectedItem="{Binding SelectedLevel}" />
                    <Label Grid.Row="5" Grid.Column="1" Margin="0,0,0,5" Content="Õppekava maht (EAP):" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="5" Grid.Column="2" Margin="0,0,0,5" Text="{Binding EapVolume}" />
                    <Label Grid.Row="6" Grid.Column="1" Margin="0,0,0,5" Content="Õppetöö keel:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="6" Grid.Column="2" Margin="0,0,0,5" ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}" />
                </Grid>
                <Button Grid.Row="2" Grid.Column="1" Height="30" HorizontalAlignment="Left"
                        Click="lnkGoHome_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="Transparent" BorderThickness="0">
                    <Label>
                        <Underline>Tagasi avalehele</Underline>
                    </Label>
                </Button>
                <Button Grid.Row="2" Grid.Column="1"  Width="150" Height="30" HorizontalAlignment="Right" Name="btnEditCurriculum" Content="Muuda õppekava"/>
            </Grid>
        </StackPanel>
        <StackPanel Name="pnlAddCurriculumView" Visibility="Visible">
            <Grid Margin="10" Height="420">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Text="Õppekava lisamine" FontSize="18" FontWeight="Bold"/>
                <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Content="Õppekava nimi:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="2" Margin="0,0,0,5" Text="{Binding EtName}" />
                    <Label Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" Content="Õppekava nimi (EN):" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,0,0,5" Text="{Binding EnName}" />
                    <Label Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Content="Õppekava kood:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="2" Margin="0,0,0,5" Text="{Binding Code}" />
                    <Label Grid.Row="3" Grid.Column="1" Margin="0,0,0,5" Content="Programmijuht:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="2" Margin="0,0,0,5" Text="{Binding TeacherName}" />
                    <Label Grid.Row="4" Grid.Column="1" Margin="0,0,0,5" Content="Õppetase:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="4" Grid.Column="2" Margin="0,0,0,5" ItemsSource="{Binding StudyLevels}" SelectedValuePath="Key" SelectedValue="{Binding SelectedStudyLevel, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Value}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Label Grid.Row="5" Grid.Column="1" Margin="0,0,0,5" Content="Õppekava maht (EAP):" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="5" Grid.Column="2" Margin="0,0,0,5" Text="{Binding EapVolume}" />
                    <Label Grid.Row="6" Grid.Column="1" Margin="0,0,0,5" Content="Õppetöö keel:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="6" Grid.Column="2" Margin="0,0,0,5" ItemsSource="{Binding Languages}" SelectedValuePath="Key" SelectedValue="{Binding SelectedLanguage, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Value}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                <Button Grid.Row="2" Grid.Column="1" Height="30" HorizontalAlignment="Left"
                Click="lnkGoHome_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                Background="Transparent" BorderThickness="0">
                    <Label>
                        <Underline>Tagasi avalehele</Underline>
                    </Label>
                </Button>
                <Button Grid.Row="2" Grid.Column="1"  Width="150" Height="30" HorizontalAlignment="Right" Name="btnAddCurriculum" Content="Lisa õppekava"/>
            </Grid>
        </StackPanel>
        <StackPanel Name="pnlEditSubjectView" Visibility="Hidden">
            <Grid Margin="10" Height="365">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Õppeaine muutmine" FontSize="18" FontWeight="Bold"/>
                <ListView Grid.Row="1" ItemsSource="{Binding Curriculums}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Õppeaine nimi" DisplayMemberBinding="{Binding EtName}" Width="250"/>
                            <GridViewColumn Header="Õppeaine nimi (EN)" DisplayMemberBinding="{Binding EnName}" Width="250" />
                            <GridViewColumn Header="Õppeaine kood" DisplayMemberBinding="{Binding Code}" Width="90"/>
                            <GridViewColumn Header="Õppejõud" DisplayMemberBinding="{Binding TeacherName}" Width="250"/>
                            <GridViewColumn Header="Õppeaine maht (EAP)" DisplayMemberBinding="{Binding EapVolume}" Width="140" />
                            <GridViewColumn Header="Hindamisvorm" DisplayMemberBinding="{Binding AssessmentForm}" Width="140" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button Grid.Row="2" Height="30" HorizontalAlignment="Left"
                        Click="lnkGoHome_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="Transparent" BorderThickness="0">
                    <Label>
                        <Underline>Tagasi avalehele</Underline>
                    </Label>
                </Button>
                <Button Grid.Row="2" Width="150" Height="30" HorizontalAlignment="Right" Name="btnEditSubject" Content="Muuda õppeainet"/>
            </Grid>
        </StackPanel>
        <StackPanel Name="pnlAddSubjectView" Visibility="Hidden">
            <Grid Margin="10" Height="365">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Õppeaine lisamine" FontSize="18" FontWeight="Bold"/>
                <ListView Grid.Row="1" ItemsSource="{Binding Curriculums}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Õppeaine nimi" DisplayMemberBinding="{Binding EtName}" Width="250"/>
                            <GridViewColumn Header="Õppeaine nimi (EN)" DisplayMemberBinding="{Binding EnName}" Width="250" />
                            <GridViewColumn Header="Õppeaine kood" DisplayMemberBinding="{Binding Code}" Width="90"/>
                            <GridViewColumn Header="Õppejõud" DisplayMemberBinding="{Binding TeacherName}" Width="250"/>
                            <GridViewColumn Header="Õppeaine maht (EAP)" DisplayMemberBinding="{Binding EapVolume}" Width="140" />
                            <GridViewColumn Header="Hindamisvorm" DisplayMemberBinding="{Binding AssessmentForm}" Width="140" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button Grid.Row="2" Height="30" HorizontalAlignment="Left"
                        Click="lnkGoHome_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Background="Transparent" BorderThickness="0">
                    <Label>
                        <Underline>Tagasi avalehele</Underline>
                    </Label>
                </Button>
                <Button Grid.Row="2" Width="150" Height="30" HorizontalAlignment="Right" Name="btnAddSubject" Content="Lisa õppeaine"/>
            </Grid>
        </StackPanel>
        <ComboBox HorizontalAlignment="Left" Margin="1240,105,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>